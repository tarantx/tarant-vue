{
  "name": "tarant-vue",
  "version": "0.3.30",
  "description": "vue renderer materializer for the tarant framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "contributors": [
    "Kevin Mas Ruiz <masruizkevin@gmail.com>",
    "Kanekotic <alvarojosepl@gmail.com>"
  ],
  "repository": "git@github.com:tarantx/tarant-vue.git",
  "license": "MIT",
  "keywords": [
    "actor system",
    "actor",
    "DDD",
    "actor-system",
    "vue"
  ],
  "scripts": {
    "prepare": "npm run build && npm run build:cdn",
    "start": "esbuild lib/index.ts --bundle --servedir=www --outdir=www/js '--define:process.env.NODE_ENV=\"production\"'",
    "build": "esbuild --platform=node --bundle lib/index.ts --outdir=dist --minify --sourcemap '--define:process.env.NODE_ENV=\"production\"'",
    "build:cdn": "esbuild --bundle lib/index.ts --outdir=cdn --minify --sourcemap '--define:process.env.NODE_ENV=\"production\"'",
    "format": "prettier --write \"**/*.ts\" && eslint --fix lib/**/*.ts",
    "lint": "eslint",
    "test": "npm run format && npm run lint && jest test",
    "test:dev": "jest --watchAll test",
    "test:cov": "npm run format && npm run lint && jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "push": "npm run test && git push",
    "deploy:major": "npm version major",
    "deploy:minor": "npm version minor",
    "deploy:patch": "npm version patch",
    "deploy:push": "git push && git push --tags",
    "preversion": "npm test"
  },
  "devDependencies": {
    "@types/faker": "4.1.12",
    "@types/jest": "25.2.3",
    "@types/node": "14.0.4",
    "@types/vue": "2.0.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "coveralls": "3.1.0",
    "esbuild": "0.8.54",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "faker": "4.1.0",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "ts-jest": "26.0.0",
    "tslib": "^1.14.1"
  },
  "dependencies": {
    "tarant": "2.7.66",
    "vue": "2.6.12"
  },
  "jest": {
    "preset": "ts-jest"
  }
}
